{
  "compilerOptions": {
    "target": "es5",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "noImplicitAny": false
  },
  "include": ["apps/**/*", "packages/**/*"],
  "exclude": ["node_modules", "apps/**/dist", "packages/**/lib", "**/webpack.config.js"]
}
